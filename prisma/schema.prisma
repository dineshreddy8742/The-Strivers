generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  hashedPassword String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  lcaAssessments LCAAssessment[]
}

model LCAAssessment {
  id                String   @id @default(cuid())
  name              String
  metalType         String
  description       String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  userId            String
  
  user              User     @relation(fields: [userId], references: [id])
  processStages     ProcessStage[]
  impactResults     ImpactResult[]
  circularityMetrics CircularityMetric[]
}

model ProcessStage {
  id                  String @id @default(cuid())
  name                String
  stageType           String // extraction, processing, manufacturing, use, end_of_life
  energyConsumption   Float? // in MJ
  waterUsage          Float? // in liters
  materialInput       Float? // in kg
  materialOutput      Float? // in kg
  recycledContent     Float? // percentage
  transportDistance   Float? // in km
  co2Emissions        Float? // in kg CO2eq
  wasteGenerated      Float? // in kg
  
  assessmentId        String
  assessment          LCAAssessment @relation(fields: [assessmentId], references: [id])
}

model ImpactResult {
  id                String @id @default(cuid())
  category          String // global_warming, water_use, energy_use, etc.
  value             Float
  unit              String
  assessmentId      String
  assessment        LCAAssessment @relation(fields: [assessmentId], references: [id])
}

model CircularityMetric {
  id                String @id @default(cuid())
  metricName        String // recycled_content, recyclability, resource_efficiency, etc.
  value             Float
  unit              String
  benchmark         Float?
  assessmentId      String
  assessment        LCAAssessment @relation(fields: [assessmentId], references: [id])
}